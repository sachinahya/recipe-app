{
  "private": true,
  "name": "@sachinahya/recipe-app",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "NODE_ENV=development wsrun dev",
    "test": "NODE_ENV=test jest",
    "lint": "eslint --plugin simple-import-sort --rule 'simple-import-sort/sort: error' \"**/*.{js,ts,tsx}\"",
    "prettier": "prettier \"**/*.{js,ts,tsx,json}\" \"**/*.?(s)css\" \"**/*.md\" -l"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@sachinahya/eslint-config-myconfig": "^0.2.1",
    "@testing-library/dom": "^7.2.1",
    "@testing-library/user-event": "^10.0.1",
    "@types/jest": "^25.2.1",
    "@types/testing-library__react": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-jest": "^25.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-plugin-jsdoc": "^22.1.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-simple-import-sort": "^5.0.2",
    "eslint-plugin-sonarjs": "^0.5.0",
    "husky": "^4.2.5",
    "is-ci": "^2.0.0",
    "jest": "^25.3.0",
    "jest-watch-typeahead": "^0.5.0",
    "lint-staged": "^10.1.3",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "wsrun": "^5.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --plugin simple-import-sort --rule 'simple-import-sort/sort: error' --cache --fix",
      "prettier --write"
    ],
    "*.json": "prettier --write",
    "*.?(s)css": "prettier --write",
    "*.md": "prettier --write"
  }
}
