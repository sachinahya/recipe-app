{
  "private": true,
  "name": "@sachinahya/recipe-app",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "NODE_ENV=development wsrun dev",
    "test": "NODE_ENV=test jest",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prettier": "prettier \"**/*.{js,ts,tsx,json}\" \"**/*.?(s)css\" \"**/*.md\" -l"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@types/jest": "^25.2.1",
    "babel-jest": "^25.3.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "jest-watch-typeahead": "^0.5.0",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "wsrun": "^5.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.json": "prettier --write",
    "*.?(s)css": "prettier --write",
    "*.md": "prettier --write"
  }
}
