{
  "private": true,
  "name": "@sachinahya/recipe-app",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**"
    ]
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production wsrun build",
    "start": "cross-env NODE_ENV=production RA_SERVE_CLIENT=true yarn workspace @sachinahya/recipe-app-server start",
    "dev": "cross-env NODE_ENV=development wsrun dev",
    "migrate:db": "yarn workspace @sachinahya/recipe-app-server migration:run",
    "test": "cross-env NODE_ENV=test jest",
    "lint": "eslint --plugin simple-import-sort --rule 'simple-import-sort/sort: error' \"**/*.{js,ts,tsx}\"",
    "prettier": "prettier \"**/*.{js,ts,tsx,json}\" \"**/*.?(s)css\" \"**/*.md\" -l"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@sachinahya/eslint-config-myconfig": "^0.2.1",
    "@testing-library/dom": "^7.24.5",
    "@testing-library/user-event": "^12.1.7",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "babel-jest": "^26.5.2",
    "cross-env": "^7.0.2",
    "eslint": "^7.11.0",
    "eslint-plugin-jsdoc": "^30.6.4",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-sonarjs": "^0.5.0",
    "husky": "^4.3.0",
    "is-ci": "^2.0.0",
    "jest": "^26.5.2",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "wsrun": "^5.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --plugin simple-import-sort --rule 'simple-import-sort/sort: error' --cache --fix",
      "prettier --write"
    ],
    "*.json": "prettier --write",
    "*.?(s)css": "prettier --write",
    "*.md": "prettier --write"
  }
}
