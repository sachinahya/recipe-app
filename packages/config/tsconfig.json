{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strictPropertyInitialization": false,
    "typeRoots": ["node_modules/@types", "src/@types", "../../node_modules/@types"],
    "baseUrl": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["dist", "node_modules"]
}
